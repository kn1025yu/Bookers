<h1>Editing Book</h1>
 <% if @blog.errors.any? %>
    <%= @blog.errors.count %>errors have occurred
    <% @blog.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
  <% end %>

<%= form_with model:@books, local: true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
  
<a class="edit" href="/books/show">Show</a> |
<a class="back" href="/books">Back</a>
<% end %>
